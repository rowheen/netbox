<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">    
    <title>To Do List</title>
    <style>
         /* Red to Purple Gradient for the Navbar */
         .navbar {
            background: linear-gradient(to right, red, purple);
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Navbar with To Do List heading and Add Task button -->
        <nav class="navbar navbar-expand-lg navbar-light bg-danger">
            <div class="container-fluid">
                <!-- Heading inside navbar -->
                <a class="navbar-brand text-white" href="#">To Do List</a>
                
                <!-- Add Task Button -->
                <a href="/add" class="btn btn-danger btn-outline-light ms-auto" role="button">Add Task</a>
            </div>
        </nav>
    
        <% if (tasks.length > 0) { %>
         <!-- Task List -->
        <div class="row">
            <% tasks.forEach(task => { %>
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="m-3">
                        <div class="card w-100 border-danger">
                            <div class="card-body">
                                <h5 class="card-title"><%= task.title %></h5>
                                <h6 class="card-subtitle mb-2 text-body-secondary"><%= task.timestamp %></h6>
                                <p class="card-text"><%= task.description %></p>
                                <a class="btn btn-primary" href="/edit" role="button">Edit</a>
                                <a class="btn btn-danger" href="/delete" role="button">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        <% } else { %>
            <div class="m-3">
                <div class="card w-100 border-danger">
                    <div class="card-body">
                        <h5 class="card-title">No Tasks Yet</h5>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
